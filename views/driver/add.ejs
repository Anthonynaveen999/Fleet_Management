<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Driver</h1>
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">
      <button class="btn btn-sm btn-outline-secondary">?</button>
    </div>
  </div>
</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
          <li class="breadcrumb-item active">New Driver</li>
        </ol>
      </nav>
    </div>
    <div class="col text-end fw-lighter">
      <b>UserId</b>
    </div>
  </div>

</div>


<form action="/drivers/add" method="POST">

  <div class="row form-group mb-4">
    <div class="col">
      <label for="name">Name</label>
      <input type="text" class="form-control" id="name" name="name" value="" placeholder="Name" required>
    </div>

    <div class="col">
      <label for="contact">contact</label>
      <input type="number" class="form-control" id="contact" name="contact" value="" placeholder="Contact" required>
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="aadharNumber">aadhar Number</label>
      <input type="text" class="form-control" id="aadharNumber" name="aadharNumber" value="" placeholder="aadhar Number" required>
    </div>

    <div class="col">
      <label for="licenseNumber">license Number</label>
      <input type="text" class="form-control" id="licenseNumber" name="licenseNumber" value="" placeholder="license Number" required>
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="currentLocation">Current Location</label>
      <input type="text" class="form-control" id="currentLocation" name="currentLocation" value="" placeholder="Current Location" required>
    </div>

    <div class="col">
      <label for="PreferredDestinations">Preferred destinations</label>
      <input type="text" class="form-control" id="PreferredDestinations" name="PreferredDestinations" value="" placeholder="Preferred destinations" required>
    </div>
  </div>
  <div class="row form-group mb-4">
    <div class="col">
      <label for="Status">Status</label>
      <input type="text" class="form-control" id="Status" name="Status" value="" placeholder="Status" required>
    </div>
  </div>

  <div class="form-group mb-4">
    <button type="submit" class="btn btn-primary">Add Driver</button>
  </div>

  

</form>